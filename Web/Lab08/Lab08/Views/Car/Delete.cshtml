@model Lab08.Models.Car

@{
    ViewData["Title"] = "Xóa Xe";
}

<div class="contact_section layout_padding">
    <div class="container">
        <h1 class="contact_taital" style="color: #d9534f;">Xóa Xe</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-warning text-center">
                    <h3>Bạn thực sự muốn xóa chiếc xe này?</h3>
                </div>

                <div class="mail_section map_form_container" style="width: 100%;">
                    <label class="text-white ml-2">Tên Xe:</label>
                    <input value="@Model.Name" class="mail_text" readonly style="background-color: #eee;" />

                    <label class="text-white ml-2 mt-2">Hãng Xe:</label>
                    <input value="@(Model.Brand != null ? Model.Brand.Name : "N/A")" class="mail_text" readonly style="background-color: #eee;" />

                    <form asp-action="Delete" class="mt-4 text-center">
                        <input type="hidden" asp-for="Id" />
                        <div class="map_btn_main">
                            <div class="send_bt">
                                <button type="submit" style="background:none; border:none; color:white; font-weight:bold; cursor:pointer;">XÁC NHẬN XÓA</button>
                            </div>
                            <div class="map_bt ml-3">
                                <a asp-action="Index" style="color:white;">Hủy bỏ</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>