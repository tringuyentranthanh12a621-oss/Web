@model Lab08.Models.Brand

@{
    ViewData["Title"] = "Xóa Hãng Xe";
}

<div class="contact_section layout_padding">
    <div class="container">
        <h1 class="contact_taital" style="color: #d9534f;">Xác nhận Xóa</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-danger text-center">
                    <h3>Bạn có chắc chắn muốn xóa hãng xe này không?</h3>
                    <p>Hành động này không thể hoàn tác.</p>
                </div>

                <div class="mail_section map_form_container" style="width: 100%;">
                    <label class="text-white ml-2">Tên Hãng:</label>
                    <input value="@Model.Name" class="mail_text" readonly style="background-color: #eee;" />

                    <label class="text-white ml-2 mt-2">Quốc Gia:</label>
                    <input value="@Model.Country" class="mail_text" readonly style="background-color: #eee;" />

                    <form asp-action="Delete" class="mt-4 text-center">
                        <input type="hidden" asp-for="Id" />
                        <div class="map_btn_main">
                            <div class="send_bt">
                                <button type="submit" style="background:none; border:none; color:white; font-weight:bold; cursor:pointer;">XÓA NGAY</button>
                            </div>
                            <div class="map_bt ml-3">
                                <a asp-action="Index" style="color:white;">Hủy bỏ</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>