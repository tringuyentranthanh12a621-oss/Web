@model MvcMovieFinal.Models.Movie

@{
    ViewData["Title"] = "Tạo Phim Mới";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-film"></i> Thêm Phim Mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" placeholder="Tên phim" />
                            <label asp-for="Title"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Author" class="form-control" placeholder="Tác giả" />
                            <label asp-for="Author"></label>
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                            <label asp-for="CategoryId"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Rating" class="form-control" placeholder="Đánh giá" />
                            <label asp-for="Rating"></label>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ProductionDate" class="form-control" type="date" />
                            <label asp-for="ProductionDate"></label>
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ReleaseDate" class="form-control" type="date" />
                            <label asp-for="ReleaseDate"></label>
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Price" class="form-control" placeholder="Giá vé" />
                            <label asp-for="Price"></label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Hoàn tất</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}