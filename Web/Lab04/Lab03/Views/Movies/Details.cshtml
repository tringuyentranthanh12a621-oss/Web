@model MvcMovieFinal.Models.Movie

@{
    ViewData["Title"] = "Chi tiết Phim";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill"></i> Chi tiết Phim</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-3">
                    <div class="bg-light d-flex align-items-center justify-content-center h-100 rounded border" style="min-height: 250px;">
                        <div class="text-secondary">
                            <i class="bi bi-film display-1"></i>
                            <p class="mt-2">Poster Phim</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h2 class="text-primary fw-bold">@Html.DisplayFor(model => model.Title)</h2>
                    <p class="text-muted fst-italic">
                        <i class="bi bi-person-circle"></i> Tác giả: @Html.DisplayFor(model => model.Author)
                    </p>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.Category.Name)</span>
                        </dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.ProductionDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductionDate)</dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.ReleaseDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ReleaseDate)</dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-8 text-success fw-bold fs-5">
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.Rating)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning text-dark">@Html.DisplayFor(model => model.Rating)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning fw-bold">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>