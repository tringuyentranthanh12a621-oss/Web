@model IEnumerable<MvcMovieFinal.Models.Category>

@{
    ViewData["Title"] = "Danh sách Thể loại";
}

<div class="container mt-4" style="max-width: 900px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-tags-fill"></i> Quản lý Thể loại</h4>
            <a asp-action="Create" class="btn btn-light text-primary fw-bold">
                <i class="bi bi-plus-lg"></i> Thêm mới
            </a>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="alert alert-warning m-3">Chưa có thể loại nào.</div>
            }
            else
            {
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-center">Thống kê</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">
                                    <i class="bi bi-tag"></i> @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="text-center">
                                    @{
                                        int count = item.Movies?.Count ?? 0;
                                        string badgeColor = count > 0 ? "bg-success" : "bg-secondary";
                                    }
                                    <span class="badge rounded-pill @badgeColor">
                                        @count phim
                                    </span>
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Sửa"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Chi tiết"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Xóa"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>